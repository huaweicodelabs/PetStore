<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/petstore_10_dp"
        android:layout_marginTop="@dimen/petstore_10_dp"
        android:textColor="@color/Black"
        android:textSize="@dimen/petstore_text_16_sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_phone_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/petstore_100_dp"
        android:layout_marginTop="@dimen/petstore_10_dp"
        android:textColor="@color/Black"
        android:textSize="@dimen/petstore_text_16_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/petstore_10_dp"
        android:layout_marginTop="@dimen/petstore_10_dp"
        android:layout_marginBottom="@dimen/petstore_10_dp"
        android:textSize="@dimen/petstore_text_14_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/petstore_10_dp"
        android:background="@drawable/bg_box_red"
        android:padding="@dimen/petstore_2_dp"
        android:textColor="@color/White"
        android:textSize="@dimen/petstore_text_10_sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_phone_num"
        app:layout_constraintStart_toEndOf="@+id/tv_phone_num"
        app:layout_constraintTop_toTopOf="@+id/tv_phone_num" />
</androidx.constraintlayout.widget.ConstraintLayout>