<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/petstore_48_dp"
        android:background="@color/title_bg">

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:contentDescription="@null"
            android:fontFamily="SourceHanSansCN-Regular"
            android:paddingStart="@dimen/petstore_10_dp"
            android:paddingEnd="@dimen/petstore_10_dp"
            android:src="@mipmap/ic_back" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:fontFamily="SourceHanSansCN-Regular"
            android:gravity="center"
            android:text="@string/member_center"
            android:textColor="@color/petstore_black"
            android:textSize="@dimen/petstore_text_18_sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/petstore_10_dp"
        android:layout_marginBottom="@dimen/petstore_10_dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/member_headImg"
            android:layout_width="@dimen/petstore_60_dp"
            android:layout_height="@dimen/petstore_60_dp"
            android:layout_margin="@dimen/petstore_5_dp"
            android:contentDescription="@null"
            android:src="@mipmap/ic_login_login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/petstore_10_dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/petstore_5_dp"
            android:text="@string/login_login"
            android:textColor="@color/petstore_black"
            android:textSize="@dimen/petstore_text_16_sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/add_address_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/petstore_10_dp"
        android:layout_marginEnd="@dimen/petstore_10_dp"
        android:layout_marginBottom="@dimen/petstore_10_dp"
        android:gravity="center"
        android:background="@drawable/bg_add_address"
        android:paddingVertical="@dimen/petstore_11_dp"
        android:text="@string/add_delivery_address"
        android:textColor="@color/petstore_black"
        android:textSize="@dimen/petstore_text_16_sp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/membercenter_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.appcompat.widget.LinearLayoutCompat>