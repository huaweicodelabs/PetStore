<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/petstore_48_dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:contentDescription="@null"
            android:fontFamily="SourceHanSansCN-Regular"
            android:paddingStart="@dimen/petstore_10_dp"
            android:paddingEnd="@dimen/petstore_10_dp"
            android:src="@mipmap/ic_back" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:fontFamily="SourceHanSansCN-Regular"
            android:gravity="center"
            android:text="@string/person_center"
            android:textColor="@color/petstore_black"
            android:textSize="@dimen/petstore_text_18_sp" />

        <ImageView
            android:id="@+id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:fontFamily="SourceHanSansCN-Regular"
            android:paddingStart="@dimen/petstore_10_dp"
            android:paddingEnd="@dimen/petstore_10_dp"
            android:src="@mipmap/ic_setting" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/petstore_10_dp"
        android:layout_marginBottom="@dimen/petstore_10_dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mine_headImg"
            android:layout_width="@dimen/petstore_60_dp"
            android:layout_height="@dimen/petstore_60_dp"
            android:layout_margin="@dimen/petstore_5_dp"
            android:contentDescription="@null"
            android:src="@mipmap/ic_login_login" />

        <TextView
            android:id="@+id/name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/petstore_10_dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/petstore_5_dp"
            android:text="@string/login_login"
            android:textColor="@color/petstore_black"
            android:textSize="@dimen/petstore_text_16_sp" />

        <TextView
            android:id="@+id/mine_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/petstore_10_dp"
            android:background="@drawable/bg_members"
            android:gravity="center"
            android:paddingStart="@dimen/petstore_15_dp"
            android:paddingTop="@dimen/petstore_5_dp"
            android:paddingEnd="@dimen/petstore_15_dp"
            android:paddingBottom="@dimen/petstore_5_dp"
            android:text="@string/members"
            android:textColor="@color/Grey_800"
            android:textSize="@dimen/petstore_text_12_sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mine_member_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/petstore_10_dp"
        android:background="@mipmap/card"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/petstore_10_dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/mine_member_icon"
            android:layout_width="@dimen/petstore_40_dp"
            android:layout_height="@dimen/petstore_40_dp"
            android:contentDescription="@null"
            android:src="@mipmap/member" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/petstore_10_dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_member_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/petstore_40_dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/Grey_800"
                android:textSize="@dimen/petstore_text_16_sp" />

            <TextView
                android:id="@+id/mine_member_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/Grey_500"
                android:textSize="@dimen/petstore_text_14_sp" />

            <TextView
                android:id="@+id/mine_members_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/petstore_10_dp"
                android:gravity="center"
                android:paddingTop="@dimen/petstore_5_dp"
                android:paddingBottom="@dimen/petstore_5_dp"
                android:textColor="@color/Grey_500"
                android:textSize="@dimen/petstore_text_14_sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/petstore_93_dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_member_pay"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_subscrible"
                android:gravity="center"
                android:paddingStart="@dimen/petstore_10_dp"
                android:paddingTop="@dimen/petstore_5_dp"
                android:paddingEnd="@dimen/petstore_10_dp"
                android:paddingBottom="@dimen/petstore_5_dp"
                android:text="@string/member_pay"
                android:textColor="@color/White"
                android:textSize="@dimen/petstore_text_12_sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mine_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/petstore_10_dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:padding="@dimen/petstore_15_dp"
            android:text="@string/orders"
            android:textColor="@color/petstore_black"
            android:textSize="@dimen/petstore_text_16_sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:padding="@dimen/petstore_10_dp"
            android:text="@string/all"
            android:textColor="@color/petstore_black"
            android:textSize="@dimen/petstore_text_14_sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:contentDescription="@null"
            android:padding="@dimen/petstore_10_dp"
            android:src="@mipmap/ic_more" />

    </LinearLayout>


    <include layout="@layout/view_line_start_10dp" />

    <LinearLayout
        android:id="@+id/sub_manage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/petstore_15_dp"
            android:text="@string/iap_sub_manage"
            android:textColor="@color/petstore_black"
            android:textSize="@dimen/petstore_text_16_sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:contentDescription="@null"
            android:padding="@dimen/petstore_10_dp"
            android:src="@mipmap/ic_more" />

    </LinearLayout>

    <include layout="@layout/view_line_start_10dp" />

    <LinearLayout
        android:id="@+id/mine_addressManage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/petstore_15_dp"
            android:text="@string/address_manage"
            android:textColor="@color/petstore_black"
            android:textSize="@dimen/petstore_text_16_sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:contentDescription="@null"
            android:padding="@dimen/petstore_10_dp"
            android:src="@mipmap/ic_more" />

    </LinearLayout>

    <include layout="@layout/view_line_start_10dp" />
</androidx.appcompat.widget.LinearLayoutCompat>