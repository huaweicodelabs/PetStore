<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/petstore_0_dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/petstore_0_dp"
                android:layout_height="@dimen/petstore_93_dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_left_cat" />

            <ImageView
                android:layout_width="@dimen/petstore_0_dp"
                android:layout_height="@dimen/petstore_93_dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_center_cat" />

            <ImageView
                android:layout_width="@dimen/petstore_0_dp"
                android:layout_height="@dimen/petstore_93_dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_right_cat" />
        </LinearLayout>

        <TextView
            android:id="@+id/petstore_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingTop="@dimen/petstore_5_dp"
            android:textColor="@color/petstore_black"
            android:textSize="@dimen/petstore_text_16_sp" />

        <TextView
            android:id="@+id/petstore_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/petstore_5_dp"
            android:paddingBottom="@dimen/petstore_15_dp"
            android:textColor="@color/Grey_800"
            android:textSize="@dimen/petstore_text_14_sp" />
    </LinearLayout>
</LinearLayout>
