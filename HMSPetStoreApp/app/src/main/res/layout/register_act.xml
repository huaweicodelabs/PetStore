<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/register_logo_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/login_logo"
        android:contentDescription="@null"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/petstore_48_dp"
        android:layout_marginTop="@dimen/statusBar_height"
        android:contentDescription="@null"
        android:paddingStart="@dimen/petstore_10_dp"
        android:src="@mipmap/ic_back_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/petstore_48_dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/statusBar_height"
        android:fontFamily="SourceHanSansCN-Regular"
        android:gravity="center"
        android:text="@string/register"
        android:textColor="@color/White"
        android:textSize="@dimen/petstore_text_18_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/register_username"
        style="@style/input_box"
        android:layout_height="@dimen/petstore_50_dp"
        android:layout_marginStart="@dimen/petstore_35_dp"
        android:layout_marginTop="@dimen/petstore_20_dp"
        android:layout_marginEnd="@dimen/petstore_20_dp"
        android:hint="@string/input_phone"
        android:inputType="textPersonName"
        android:paddingStart="@dimen/petstore_10_dp"
        android:paddingTop="@dimen/petstore_5_dp"
        android:paddingEnd="@dimen/petstore_10_dp"
        app:layout_constraintTop_toBottomOf="@+id/register_logo_image"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/petstore_50_dp"
        android:layout_marginEnd="@dimen/petstore_5_dp"
        android:contentDescription="@null"
        android:src="@mipmap/ic_phone"
        app:layout_constraintBottom_toBottomOf="@+id/register_username"
        app:layout_constraintRight_toLeftOf="@+id/register_username"
        app:layout_constraintTop_toTopOf="@+id/register_username"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/register_password"
        style="@style/input_box"
        android:layout_height="@dimen/petstore_50_dp"
        android:layout_marginStart="@dimen/petstore_35_dp"
        android:layout_marginTop="@dimen/petstore_20_dp"
        android:layout_marginEnd="@dimen/petstore_20_dp"
        android:hint="@string/input_password"
        android:inputType="textPassword"
        android:paddingStart="@dimen/petstore_10_dp"
        android:paddingTop="@dimen/petstore_5_dp"
        android:paddingEnd="@dimen/petstore_10_dp"
        app:layout_constraintTop_toBottomOf="@+id/register_username"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/petstore_50_dp"
        android:layout_marginEnd="@dimen/petstore_5_dp"
        android:contentDescription="@null"
        android:src="@mipmap/ic_pwd"
        app:layout_constraintBottom_toBottomOf="@+id/register_password"
        app:layout_constraintRight_toLeftOf="@+id/register_password"
        app:layout_constraintTop_toTopOf="@+id/register_password"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/register_password_double"
        style="@style/input_box"
        android:layout_height="@dimen/petstore_50_dp"
        android:layout_marginStart="@dimen/petstore_35_dp"
        android:layout_marginTop="@dimen/petstore_20_dp"
        android:layout_marginEnd="@dimen/petstore_20_dp"
        android:hint="@string/input_password_double"
        android:inputType="textPassword"
        android:paddingStart="@dimen/petstore_10_dp"
        android:paddingTop="@dimen/petstore_5_dp"
        android:paddingEnd="@dimen/petstore_10_dp"
        app:layout_constraintTop_toBottomOf="@+id/register_password"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/petstore_50_dp"
        android:layout_marginEnd="@dimen/petstore_5_dp"
        android:contentDescription="@null"
        android:src="@mipmap/ic_pwd"
        app:layout_constraintBottom_toBottomOf="@+id/register_password_double"
        app:layout_constraintRight_toLeftOf="@+id/register_password_double"
        app:layout_constraintTop_toTopOf="@+id/register_password_double"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_register"
        style="@style/btn_normal"
        android:layout_below="@+id/register_password_double"
        android:layout_margin="@dimen/petstore_20_dp"
        android:text="@string/btn_register"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/register_password_double"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/register_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/petstore_15_dp"
        android:paddingStart="@dimen/petstore_10_dp"
        android:paddingEnd="@dimen/petstore_10_dp"
        android:textSize="@dimen/petstore_text_10_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_register"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>